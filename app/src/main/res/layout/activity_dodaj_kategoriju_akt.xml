<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aktivnosti.DodajKategorijuAkt">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/etNaziv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/button_round_corners"
            android:hint="Naziv Kategorije" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <EditText
                android:id="@+id/etIkona"
                android:layout_width="197dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_round_corners"
                android:ems="10"
                android:hint=" Ikona"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnDodajIkonu"
                android:layout_width="162dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                android:background="#0263BD"
                android:text="Dodaj Ikonu"
                android:textColor="#FFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDodajKategoriju"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="17dp"
            android:background="#0263BD"
            android:text="Spasi Kategoriju"
            android:textColor="#FFFF"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>